{
    "name": "bagpipe",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Scraping extension with beautiful UI",
    "author": "MillionCloud",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "Bagpipe_icon.png",
        "default_popup": "html/dashboard.html"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "tabs"
    ]
}